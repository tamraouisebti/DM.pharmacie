            app:layout_constraintStart_toEndOf="@+id/imageView_search_address" android:layout_marginStart="16dp"
            android:layout_marginEnd="32dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/call"
            android:id="@+id/imageView_search_phone" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView5"/>
