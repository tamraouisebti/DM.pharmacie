            android:text="23.00 Km"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_search_distance"
            android:typeface="serif" android:textColor="#7A000000" android:textSize="24sp"
            android:textStyle="bold" android:textAlignment="textStart"
