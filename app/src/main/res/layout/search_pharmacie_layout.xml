            android:text="0672312876"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_search_phone" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView_search_phone" android:layout_marginStart="16dp"
            android:layout_marginBottom="20dp" app:layout_constraintBottom_toBottomOf="@+id/textView5"
            android:textSize="24sp" android:textStyle="bold" android:textColor="#7A000000" android:typeface="serif"
