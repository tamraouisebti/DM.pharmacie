<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/view_shape"
        android:padding="0dp"
>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/facebook"
            android:id="@+id/imageButton_facebook"
            style="@style/Widget.AppCompat.ImageButton"
            android:background="@drawable/roundedbutton"
            tools:layout_conversion_absoluteHeight="307dp"
            tools:layout_conversion_absoluteWidth="89dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/imageButton4"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/buy" android:id="@+id/imageButton4"
            android:background="@drawable/roundedbutton"
            tools:layout_conversion_absoluteHeight="307dp"
            tools:layout_conversion_absoluteWidth="85dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageButton_facebook" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/imageButton_call"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/call" android:id="@+id/imageButton_call"
            android:background="@drawable/roundedbutton"
            tools:layout_conversion_absoluteHeight="307dp"
            tools:layout_conversion_absoluteWidth="84dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageButton_map" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/imageButton4" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.5"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/map" android:id="@+id/imageButton_map"
            android:background="@drawable/roundedbutton"
            tools:layout_conversion_absoluteHeight="307dp"
            tools:layout_conversion_absoluteWidth="88dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/imageButton_call"
            app:layout_constraintHorizontal_bias="0.5"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="308dp"
            android:id="@+id/textView6"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/button" app:layout_constraintHorizontal_bias="0.0"
    />
    <TextView
            android:text="Open Hours \n9:00  --  23:00"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:background="@drawable/roundedbutton"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.037"
            android:textStyle="italic" android:textAllCaps="true" android:textAlignment="center"
            android:textSize="18sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintBottom_toTopOf="@+id/textView6"
            app:layout_constraintVertical_bias="0.136" android:textColor="#7A000000" android:typeface="serif"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/mapmarker"
            android:id="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="@+id/textView6" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView6" app:layout_constraintBottom_toBottomOf="@+id/textView6"
            app:layout_constraintVertical_bias="0.37"/>
    <TextView
            android:text="23.5 Km"
            android:layout_width="179dp"
            android:layout_height="32dp"
            android:id="@+id/text_view001" app:layout_constraintEnd_toEndOf="@+id/textView6"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"
            android:textColor="@android:color/white" android:textStyle="bold" android:textSize="24sp"
            android:textAlignment="center"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/text_view"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Rue 11 Novembre"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:id="@+id/text_view" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView6" android:textColor="@android:color/white"
            android:textStyle="bold|italic" android:textAlignment="center" android:textSize="18sp"
            android:typeface="serif"/>
    <TextView
            android:text="CNAS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/textView10" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.5" android:textColor="#7A000000"
            android:textStyle="bold" android:textAlignment="center" android:textSize="14sp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:background="@drawable/cnas" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imageButton_facebook" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="CASNOS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView10" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/textView9" app:layout_constraintHorizontal_bias="0.5"
            android:textSize="14sp" android:textColor="#7A000000" android:textStyle="bold"
            android:textAlignment="center" android:typeface="serif" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6" android:background="@drawable/cnas"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/imageButton_facebook"
            app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/valid"
            android:id="@+id/imageView6"
            app:layout_constraintTop_toTopOf="@+id/textView10"
            app:layout_constraintBottom_toBottomOf="@+id/textView10"
            app:layout_constraintStart_toStartOf="@+id/textView10" android:layout_marginStart="16dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/invalid"
            android:id="@+id/imageView7"
            app:layout_constraintBottom_toBottomOf="@+id/textView9" app:layout_constraintTop_toTopOf="@+id/textView9"
            app:layout_constraintStart_toStartOf="@+id/textView9" android:layout_marginStart="16dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/cancel"
            android:id="@+id/button_popup" app:layout_constraintEnd_toEndOf="@+id/textView6"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@+id/textView6" app:layout_constraintStart_toStartOf="@+id/textView6"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.022"
            android:background="@android:color/transparent"/>

</androidx.constraintlayout.widget.ConstraintLayout>